---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '../styles/global.css';
---

<Layout title="Lord Chatterley">
	<main>
		<div class="pure-g">
			<div class="pure-u-1" id="header-panel"> 
				<h1>Chat with Lord Chatterley</h1>
			</div>
			<div class="pure-u-1" id="chat-panel"> 
				<sl-card class="question">
					This is a question
				</sl-card>
			</div>
			<div class="pure-u-1" id="question-panel"> 	
				<sl-card style="width: 100%; position: absolute; bottom: 0;">
					<div class="pure-g">
						<div class="pure-u-1 pure-u-md-7-8" id="chat-panel"> 
						<sl-textarea size="small" resize="auto" placeholder="Input your prompt here" id="question-field">

						</sl-textarea> 
					</div>
					<div class="pure-u-1 pure-u-md-1-8" id="chat-panel" style="text-align: right;"> 
							<sl-button variant="primary" outline id="submit-button">
								<sl-icon slot="suffix" name="caret-right-square-fill"></sl-icon>
								Submit
							</sl-button>
						</div>
					</div>
				</sl-card>
			</div>
		</div>
	</main>
</Layout>
